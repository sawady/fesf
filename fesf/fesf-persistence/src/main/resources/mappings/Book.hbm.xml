<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update"
	package="ar.edu.fesf.model">
	<class name="Book" >
	  
	<id column="ID" name="id">
          <generator class="native"/>
    </id>
    
    <property name="title"/>
    <property name="imagepath"/>
    <property name="description"/>
    <property name="countOfLouns"/>
    <one-to-one name="isbn" class="ISBN"/>
    <one-to-one name="publisher" class="Publisher"/>
    
    <set name="authors" table="BookAuthors">
        <key column="book"/>
        <many-to-many column="author" class="Author"/>
    </set>
    
    <set name="categories" table="BookCategories">
        <key column="book"/>
        <many-to-many column="category" class="Category"/>
    </set>
    
    <list name="reservationEvents" table="ReservationEventsForBook">
        <key column="book"/>
        <index column="indice"/>
        <one-to-many class="ReservationEvent"/>
    </list>
    
    <set name="registedCopies" table="CopiesOfBooks">
        <key column="book"/>
        <one-to-many class="Category"/>
    </set>
    
    <set name="registedCopies" table="AvailableCopiesOfBooks">
        <key column="book"/>
        <one-to-many class="Category"/>
    </set>
    
	</class>
</hibernate-mapping>
