<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<!-- Proxy to a set of filters that enforce authentication and authorization. -->
  <bean id="filterChainProxy" class="org.acegisecurity.util.FilterChainProxy">
    <property name="filterInvocationDefinitionSource">
      <value>
        CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
        PATTERN_TYPE_APACHE_ANT
        /**=httpSessionContextIntegrationFilter
      </value>
    </property>
  </bean>

  <!-- Maintains security context between requests (using the session). -->
  <bean id="httpSessionContextIntegrationFilter"
    class="org.acegisecurity.context.HttpSessionContextIntegrationFilter">
    <property name="forceEagerSessionCreation" value="true"/>
  </bean>

   <!-- Users cache for Acegi (Ehcache). -->
   <bean id="userCache" class="org.acegisecurity.providers.dao.cache.EhCacheBasedUserCache">
      <property name="cache">
         <bean class="org.springframework.cache.ehcache.EhCacheFactoryBean">
            <property name="cacheManager" ref="cacheManager"/>
            <property name="cacheName" value="your.application.name.USER_CACHE"/>
         </bean>
      </property>
   </bean>

   <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"/>
	
	<!-- beans de spring  -->
	
	<bean id="service.person" class="ar.edu.fesf.services.PersonService">
		<property name="repository" ref="persistence.personRepository" />
	</bean>
	
	<bean id="service.authentication" class="ar.edu.fesf.services.AuthenticationService">
		<property name="userInfoRepository" ref="persistence.userInfoRepository" />
		<property name="personService" ref="service.person" />
	</bean>
	
	<bean id="service.book" class="ar.edu.fesf.services.BookService">
		<property name="repository" ref="persistence.BookRepository" />
		<property name="categoryRepository" ref="persistence.CategoryRepository" />
		<property name="publisherService" ref="service.publisher" />
	</bean>
	
	<bean id="service.loan" class="ar.edu.fesf.services.LoaningService">
		<property name="repository" ref="persistence.LoanRepository" />
		<property name="personService" ref="service.person" />
		<property name="bookService" ref="service.book" />
	</bean>
	
	<bean id="service.publisher" class="ar.edu.fesf.services.PublisherService">
		<property name="repository" ref="persistence.PublisherRepository" />
	</bean>	
	
	<bean id="service.SpringInitializedService" class="ar.edu.fesf.services.SpringInitializedService">
		<property name="categoryRepository" ref="persistence.CategoryRepository" />
		<property name="bookService" ref="service.book" />
		<property name="personService" ref="service.person" />
		<property name="loaningService" ref="service.loan" />		
	</bean>

</beans>