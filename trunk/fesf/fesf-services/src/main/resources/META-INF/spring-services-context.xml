<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<!-- beans de spring  -->
	
	<bean id="service.person" class="ar.edu.fesf.services.PersonService">
		<property name="repository" ref="persistence.personRepository" />
	</bean>
	
	<bean id="service.authentication" class="ar.edu.fesf.services.AuthenticationService">
		<property name="userInfoRepository" ref="persistence.userInfoRepository" />
		<property name="personService" ref="service.person" />
	</bean>
	
	<bean id="service.book" class="ar.edu.fesf.services.BookService">
		<property name="repository" ref="persistence.BookRepository" />
		<property name="categoryRepository" ref="persistence.CategoryRepository" />
		<property name="publisherService" ref="service.publisher" />
	</bean>
	
	<bean id="service.loan" class="ar.edu.fesf.services.LoaningService">
		<property name="repository" ref="persistence.LoanRepository" />
		<property name="personService" ref="service.person" />
		<property name="bookService" ref="service.book" />
	</bean>
	
	<bean id="service.publisher" class="ar.edu.fesf.services.PublisherService">
		<property name="repository" ref="persistence.PublisherRepository" />
	</bean>	
	
	<bean id="service.SpringInitializedService" class="ar.edu.fesf.services.SpringInitializedService">
		<property name="categoryRepository" ref="persistence.CategoryRepository" />
		<property name="bookService" ref="service.book" />
		<property name="personService" ref="service.person" />
		<property name="loaningService" ref="service.loan" />		
	</bean>

</beans>